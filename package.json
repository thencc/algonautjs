{
	"name": "algonaut.js",
	"version": "0.1.20",
	"description": "algonaut.js is a simplified Algorand transaction library built specifically for Browsers and Front End Development",
	"type": "commonjs",
	"types": "dist/index.d.ts",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"browser": {
		".": "dist/index.mjs",
		"crypto": "crypto-js"
	},
	"files": [
		"dist/*",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"link": "npm link",
		"build": "rm -rf dist && run-s build:*",
		"build:cjs": "node ./esbuild.cjs.js",
		"build:esm": "node ./esbuild.esm.js",
		"build:types": "tsc --emitDeclarationOnly --outDir dist",
		"build:docs": "npx typedoc",
		"test": "node test/test.js",
		"xbuild-test": "vite build test",
		"xdev": "vite serve test --port 8891"
	},
	"keywords": [
		"algo",
		"algorand",
		"algonaut",
		"algosdk"
	],
	"author": "Aubrey Anderson, Delwin Campbell, NCC",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/thencc/algonautjs"
	},
	"dependencies": {
		"@json-rpc-tools/utils": "^1.7.6",
		"@walletconnect/client": "^1.7.7",
		"algorand-walletconnect-qrcode-modal": "^1.7.4",
		"algosdk": "^1.14.0",
		"base32-encode": "^2.0.0",
		"buffer": "^6.0.3",
		"crypto-js": "^4.1.1",
		"hi-base32": "^0.5.1",
		"js-sha512": "^0.8.0",
		"tslib": "^2.3.1"
	},
	"devDependencies": {
		"@types/crypto-js": "^4.1.1",
		"@types/superagent": "^4.1.15",
		"@typescript-eslint/eslint-plugin": "^5.13.0",
		"@typescript-eslint/parser": "^5.13.0",
		"dotenv": "^16.0.0",
		"esbuild": "^0.14.27",
		"eslint": "^8.10.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-typescript": "^3.0.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-prettier": "^4.0.0",
		"node-testing-server": "^1.5.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.5.1",
		"ts-node": "^10.7.0",
		"typedoc": "^0.22.12",
		"typescript": "^4.6.2",
		"vite": "^2.8.6"
	},
	"prettier": {
		"singleQuote": true,
		"useTabs": true,
		"tabWidth": 2,
		"semi": true,
		"trailingComma": "none"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"typescript",
			"prettier"
		],
		"parserOptions": {
			"ecmaVersion": 2020
		},
		"globals": {
			"Stream": true
		},
		"rules": {
			"quotes": [
				"warn",
				"single",
				{
					"avoidEscape": true,
					"allowTemplateLiterals": false
				}
			],
			"indent": "off",
			"@typescript-eslint/indent": [
				"warn",
				"tab"
			],
			"semi": [
				"warn",
				"always"
			],
			"no-any": 0,
			"@typescript-eslint/no-explicit-any": 0,
			"vue/no-v-model-argument": "off"
		}
	}
}