{
	"name": "algonaut.js",
	"version": "0.0.1",
	"description": "algonaut.js is a Algorand library for Browsers and Front End Development",
	"main": "dist/index.js",
	"typings": "dist/index",
	"files": [
		"dist/*",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"build": "tsc",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"keywords": [
		"algo",
		"algorand",
		"algonaut"
	],
	"author": "Aubrey Anderson / NCC",
	"license": "MIT",
	"dependencies": {
		"algosdk": "^1.12.0",
		"buffer": "^6.0.3",
		"crypto-js": "^4.1.1"
	},
	"devDependencies": {
		"@types/crypto-js": "^4.0.2",
		"@types/superagent": "^4.1.13",
		"@typescript-eslint/eslint-plugin": "^5.3.0",
		"@typescript-eslint/parser": "^5.3.0",
		"eslint": "^8.1.0",
		"eslint-config-prettier": "^8.2.0",
		"eslint-config-typescript": "^3.0.0",
		"eslint-plugin-import": "^2.24.0",
		"eslint-plugin-prettier": "^3.4.0",
		"prettier": "^2.4.1",
		"typescript": "^4.4.4"
	},
	"prettier": {
		"singleQuote": true,
		"useTabs": true,
		"tabWidth": 2,
		"semi": true,
		"trailingComma": "none"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"typescript",
			"prettier"
		],
		"parserOptions": {
			"ecmaVersion": 2020
		},
		"globals": {
			"Stream": true
		},
		"rules": {
			"quotes": [
				"warn",
				"single",
				{
					"avoidEscape": true,
					"allowTemplateLiterals": false
				}
			],
			"indent": "off",
			"@typescript-eslint/indent": [
				"warn",
				"tab"
			],
			"semi": [
				"warn",
				"always"
			],
			"no-any": 0,
			"@typescript-eslint/no-explicit-any": 0,
			"vue/no-v-model-argument": "off"
		}
	}
}
