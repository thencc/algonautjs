{
	"name": "@thencc/algonautjs",
	"version": "0.3.52",
	"description": "AlgonautJS is a simplified Algorand transaction library built specifically for Browsers and Front End Development",
	"type": "module",
	"types": "dist/index.d.ts",
	"module": "dist/index.mjs",
	"main": "dist/index.cjs",
	"browser": "dist/index.mjs",
	"exports": {
		"types": "./dist/index.d.ts",
		"import": "./dist/index.mjs",
		"require": "./dist/index.cjs",
		"node": "./dist/index.cjs"
	},
	"files": [
		"dist/*",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"link": "pnpm link --global",
		"unlink": "pnpm -g rm @thencc/algonautjs",
		"link-aw": "pnpm link @thencc/any-wallet --global",
		"link-ic": "pnpm link @thencc/inkey-client-js --global",
		"build": "rm -rf dist && run-s build:*",
		"build:cjs": "node ./esbuild.cjs.js",
		"build:esm": "node ./esbuild.esm.js",
		"build:types": "tsc --emitDeclarationOnly --outDir dist",
		"build:docs": "npx typedoc",
		"test": "jest",
		"tests": "cd tests && task prepare-tests && task tests"
	},
	"keywords": [
		"algo",
		"algorand",
		"algonaut",
		"algosdk",
		"javascript",
		"js",
		"typescript",
		"ts",
		"frontend"
	],
	"author": "Aubrey Anderson, Delwin Campbell, NCC",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/thencc/algonautjs"
	},
	"dependencies": {
		"@thencc/any-wallet": "^0.1.77",
		"algosdk": "thencc/js-algorand-sdk-no-fetch-poly#2bc85828a85d9b1fe0ad5c2b5e7c6c1f55175c65",
		"buffer": "^6.0.3"
	},
	"optionalDependencies": {
		"@blockshake/defly-connect": "^1.1.2",
		"@perawallet/connect": "^1.2.3",
		"@randlabs/myalgo-connect": "^1.4.2",
		"@thencc/inkey-client-js": "^0.0.23"
	},
	"devDependencies": {
		"@blockshake/defly-connect": "^1.1.2",
		"@jest/globals": "^29.5.0",
		"@perawallet/connect": "^1.2.0",
		"@randlabs/myalgo-connect": "^1.4.2",
		"@thencc/inkey-client-js": "^0.0.23",
		"@types/node": "^18.16.5",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"@typescript-eslint/parser": "^5.59.2",
		"dotenv": "^16.0.3",
		"esbuild": "^0.14.54",
		"eslint": "^8.40.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-config-typescript": "^3.0.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "^29.5.0",
		"jsdom": "^20.0.3",
		"node-stdlib-browser": "^1.2.0",
		"node-testing-server": "^1.5.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"sass": "^1.62.1",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1",
		"typedoc": "^0.23.28",
		"typescript": "^4.9.5",
		"vite": "^4.3.5"
	},
	"prettier": {
		"singleQuote": true,
		"useTabs": true,
		"tabWidth": 2,
		"semi": true,
		"trailingComma": "none"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"typescript",
			"prettier"
		],
		"parserOptions": {
			"ecmaVersion": 2020,
			"sourceType": "module"
		},
		"globals": {
			"Stream": true
		},
		"ignorePatterns": [
			"tests"
		],
		"rules": {
			"quotes": [
				"warn",
				"single",
				{
					"avoidEscape": true,
					"allowTemplateLiterals": false
				}
			],
			"indent": "off",
			"@typescript-eslint/indent": [
				"warn",
				"tab"
			],
			"semi": [
				"warn",
				"always"
			],
			"no-any": 0,
			"@typescript-eslint/no-explicit-any": 0,
			"vue/no-v-model-argument": "off"
		}
	}
}